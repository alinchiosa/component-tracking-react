{
  "compilerOptions": {
    "target": "es5",

    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "CommonJS",
    "moduleResolution": "node",

    "isolatedModules": true,

    "jsx": "react",
    "outDir": "./dist",
    "declaration": true
  },
  "include": ["./src"]
}
